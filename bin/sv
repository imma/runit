#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local cmd_sv="$(which "${PKG_HOME:-}/install/bin/sv" "${PKG_HOME:-}/install/sbin/sv" "${BOARD_PATH:-$HOME}/homebrew/bin/sv" /usr/local/bin/sv /usr/bin/sv)"
  if [[ -x "$cmd_sv" ]]; then
    exec "$cmd_sv" "$@"
  else
    echo "ERROR: runit binary not found: sv $*" 1>&2
    false
  fi
}

source sub "$0" "$@"
